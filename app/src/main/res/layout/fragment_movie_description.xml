<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/film_description"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/iv_movie_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="240dp"
            android:layout_height="33dp"
            android:text="Title: Fast and Furious 8"
            android:textSize="24sp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/iv_movie_image"/>

        <TextView
            android:id="@+id/tv_movie_year"
            android:layout_width="239dp"
            android:layout_height="33dp"
            android:textSize="24sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/iv_movie_image"
            android:layout_below="@+id/tv_movie_title" />

        <TextView
            android:id="@+id/tv_movie_duration"
            android:layout_width="240dp"
            android:layout_height="33dp"
            android:textSize="24sp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="55dp"
            android:layout_toLeftOf="@+id/iv_movie_image"
            android:layout_toStartOf="@+id/iv_movie_image"/>

        <TextView
            android:id="@+id/tv_movie_genre"
            android:layout_width="240dp"
            android:layout_height="33dp"
            android:textSize="24sp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="80dp"
            android:layout_toLeftOf="@+id/iv_movie_image"
            android:layout_toStartOf="@+id/iv_movie_image"/>

        <TextView
            android:id="@+id/tv_movie_director"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="105dp"
            android:layout_toLeftOf="@+id/iv_movie_image"
            android:layout_toStartOf="@+id/iv_movie_image"/>

        <TextView
            android:id="@+id/tv_movie_actors"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:textSize="24sp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="180dp"
            android:layout_toLeftOf="@+id/iv_movie_image"/>

        <TextView
            android:layout_width="240dp"
            android:layout_height="110dp"
            android:textSize="15sp"
            android:id="@+id/tv_movie_description"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="360dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_date"
            android:textSize="20sp"
            android:text="@string/choose_screening_button"
            android:gravity="center"
            android:layout_below="@+id/tv_movie_description"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
